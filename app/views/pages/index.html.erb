<h3>Listing pages</h3>

<div class="body-block">
  <table class="table">
    <tr>
      <th>Page</th>
      <th>Content</th>
    </tr>

  <% @pages.each do |mypage| %>
  <% page = Page.last_page_for_action(mypage.action) -%>
    <tr>
      <td>
        <%= link_to page.action.titleize, "/#{page.action}" %>
        <br />
        <%= link_to 'Edit', edit_page_path(page) %>
        <br />
        <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <td>
        <div style="width:800px;height:100px;overflow:hidden;border:2px solid gray;">
          <%= raw page.content %>
        </div>
      </td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Page', new_page_path %>
</div>
