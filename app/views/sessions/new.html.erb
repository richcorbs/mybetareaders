<h2>Login</h2>
<div class="container">
  <div class="row">
    <div class="span4 offset4 body-block">
      <%= form_tag sessions_path do %>
        <p>
          <%= label_tag :email %>
          <%= text_field_tag :email, params[:email] %>
        </p>
        <p>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </p>
        <%= submit_tag "Log in" , :class => 'btn btn-large' %>
      <% end %>
    </div>
  </div>
</div>
